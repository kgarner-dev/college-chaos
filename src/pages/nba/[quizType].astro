---
import Layout from '../../layouts/Layout.astro';
import Quiz from '../../components/Quiz';

export async function getStaticPaths() {
    return [
        { params: { quizType: "eastern" } },
        { params: { quizType: "western" } }
    ];
}

const { quizType } = Astro.params;

const firstLetter = quizType.charAt(0);
const nextLetters = quizType.slice(1);
const quizTitle = firstLetter + nextLetters
---
<Layout title={ quizTitle }>
    <Quiz conference={ quizType } classification="nba" client:load />
</Layout>