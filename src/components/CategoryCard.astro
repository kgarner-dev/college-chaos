---

const { title, url, logo, color } = Astro.props

---

<a class="category-card" href=`${ url }` style=`background: ${ color }`>
    <div class="logo" style=`background-image: url('${ logo }')`></div>
    <h3>{ title }</h3>
</a>

<style lang="scss">
    @use './global.scss';

    .category-card {
        padding: 20px;
        aspect-ratio: 1.85;
        display: flex;
        flex-direction: column;
        justify-content: center;
        color: #FFF !important;
        text-decoration: none;
        position: relative;
        grid-column: auto / span 4;

        @media (min-width: 650px) {
            grid-column: auto / span 2;
            aspect-ratio: 1.25;
        }

        @media (min-width: 850px) {
            grid-column: auto / span 1;
        }

        &::after {
            inset: 0;
            position: absolute;
            content: '';
            background: linear-gradient(to right, rgba(0, 0, 0, 0.65), rgba(0, 0, 0, 0.4));
            transition: all 0.3s ease;
        }

        * {
            position: relative;
            z-index: 5;
        }

        h3 {
            font-size: clamp(1rem, 1.65vw, 1.65rem);
            margin: 0;
        }

        .logo {
            position: absolute;
            inset: 0;
            z-index: 2;
            opacity: 0.08;
            background-repeat: repeat;
            background-size: 30%;
            background-position: center center;
        }
        
        @media (min-width: 650px) {
            padding: 40px;

            &:hover {
                &::after {
                    opacity: 0.5;
                }
            }
        }
    }
</style>