---

const { title, url, description } = Astro.props

---

<a class="category-card" href=`${ url }`>
    <h3>{ title }</h3>
    <p>{ description }</p>
</a>

<style lang="scss">
    @use './global.scss';

    .category-card {
        background: red;
        padding: 20px;
        aspect-ratio: 1.25;
        display: flex;
        flex-direction: column;
        justify-content: center;
        color: #FFF;
        text-decoration: none;

        h3 {
            font-size: clamp(1rem, 1.65vw, 1.65rem);
            margin: 0;
        }

        p {
            margin: 10px 0 0;
            opacity: 0;
            transition: all 0.3s ease;
        }
        
        @media (min-width: 650px) {
            padding: 40px;

            &:hover {
                p {
                    opacity: 1;
                }
            }
        }
    }
</style>